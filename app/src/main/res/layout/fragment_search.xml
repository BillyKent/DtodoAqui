<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.SearchFragment">

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:background="@drawable/background_search"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/keywordSearchET"
            style="@style/EditTextRounded"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:hint="@string/palabra_clave"
            android:inputType="text" />

        <EditText
            android:id="@+id/locationSearchET"
            style="@style/EditTextRounded"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:hint="@string/ubicacion_text"
            android:inputType="text" />

        <Spinner
            android:id="@+id/categoriesSearchSP"
            style="@style/EditTextRounded"
            android:entries="@array/categories_array"
            android:spinnerMode="dialog" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchSearchBT"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:text="@string/buscar_establecimiento"
            app:cornerRadius="50dp" />
    </LinearLayout>

    <Button
        android:id="@+id/collapseSearchBT"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:drawableBottom="@drawable/ic_arrow_up_black_24dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/establishmentsSearchRV"
        android:layout_width="416dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/collapseSearchBT"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/cardview_establishment_search">

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressSearchPB"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/establishmentsSearchRV"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>